            <table>
                <th>
                    <td>Accept</td>
                    <td>Reject</td>
                    <td>Delete</td>
                    <td>Edit</td>
                </th>
            </table>
        </div>
    </div>

{{!-- contracts cards here --}}
    <div class="cards">
            {{!-- {{#each ----}}
            {{!-- {{> contractCard this}} --}}
            {{!-- {{/each}} --}}

        <div class="contract-card">
        <div class="nav-contract-items">

            <table>
                <tr>
                    <td>{{pq}}</td>
                    <td>{{importe}}</td>
                    <td>{{comercial}}</td>
                    <td>{{cliente}}</td>
                </tr>
            </table>
        </div>
        <div class="nav-contract-actions">
            <table>
                <tr>
                    <td><img id="accept-btn" src="images/icons/approve.png" alt="accept"></td>
