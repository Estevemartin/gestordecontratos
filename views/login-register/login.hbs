<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contract Manager</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/login-register.css">
</head>
<body>

<form class="bg-register-login login-container" action="/" method="POST"> 
    <h1 class="black">Login</h1>

    <input type="email" placeholder="Your email here" name="email"  value="{{#if formData.email}}{{formData.email}}{{/if}}{{#if email}}{{email}}{{/if}}">
    <input type="password" placeholder="Introduce a password" name="password" >

    <!-- forgot password -->
    <a class="underline-link forgot-password" href="#">Forgot your password?</a>

    <button class="btn btn-blue" type="submit">LOG IN</button>

    <!-- verification messages -->
    {{#if formData.succesMsg}}
    <div class="success-message">{{formData.succesMsg}}</div>
    
    {{/if}}
    {{#if errorMsg}}
        <div class="error-message">{{errorMsg}}</div>
    {{/if}}

    <!-- register section -->
    <div class="devided-block">
        <div class="devided"></div>
        <span>or</span>
        <div class="devided"></div>
    </div>

    <a class="create-account-link" href="/register">Create an account</a>
</form>
<script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
</body>
</html>
