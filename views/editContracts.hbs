        <h3 style="font-size: 1.2rem; margin-top: 10px;"><strong>Autorizados</strong></h3>
        <li><span class="btn1 btn-{{#if firmas.autComercial.value}}blue{{else}}red{{/if}}">Comercial{{#if firmas.autComercial.person}} - {{firmas.autComercial.person}}{{/if}}</span></li>
        <li><span class="btn1 btn-{{#if firmas.autOperaciones.value}}blue{{else}}red{{/if}}">Operaciones{{#if firmas.autOperaciones.person}} - {{firmas.autOperaciones.person}}{{/if}}</span></li>
        <li><span class="btn1 btn-{{#if firmas.autCRiesgos.value}}blue{{else}}red{{/if}}">Control de Riesgos{{#if firmas.autCRiesgos.person}} - {{firmas.autCRiesgos.person}}{{/if}}</span></li>
        <li><span class="btn1 btn-{{#if firmas.autPRL.value}}blue{{else}}red{{/if}}">PRL{{#if firmas.autPRL.person}} - {{firmas.autPRL.person}}{{/if}}</span></li>

    </div>

    <div class="block">
        <h3 style="font-size: 1.2rem; margin-top: 10px;"><strong>Directores</strong></h3>
        <li><span class="btn1 btn-{{#if firmas.dirComercial.value}}blue{{else}}red{{/if}}">Comercial{{#if firmas.dirComercial.person}} - {{firmas.dirComercial.person}}{{/if}}</span></li>
        <li><span class="btn1 btn-{{#if firmas.dirOperaciones.value}}blue{{else}}red{{/if}}">Operaciones{{#if firmas.dirOperaciones.person}} - {{firmas.dirOperaciones.person}}{{/if}}</span></li>
        <li><span class="btn1 btn-{{#if firmas.dirCRiesgos.value}}blue{{else}}red{{/if}}">Control de Riesgos{{#if firmas.dirCRiesgos.person}} - {{firmas.dirCRiesgos.person}}{{/if}}</span></li>
        <li><span class="btn1 btn-{{#if firmas.dirPRL.value}}blue{{else}}red{{/if}}">PRL{{#if firmas.dirPRL.person}} - {{firmas.dirPRL.person}}{{/if}}</span></li>
    </div>

    <div class="block">
        <h3 style="font-size: 1.2rem; margin-top: 10px;"><strong>Director General</strong></h3>
        <li><span class="btn1 btn-red">Direcci√≥n General </span></li>
    </div>
</div>
</div>


{{!-- Historia de alertas enviadas y archivos --}}
<div class="archivos-preview-container">
    <div class="email-status archivos border">
        <div class="archivos-nav">
            <h3 class="blue">Contract history</h3>
        </div>
        {{#each historico}}
        <div class="email-status-card">
            <div class="titulos-avisos">
                <div class="icon-alert">mail</div>
                <div class="tipo-aviso">{{accion}}</div>
                <div class="tipo-aviso-nombre">{{persona}}</div>
                <div class="tipo-aviso-fecha">{{fecha}}</div>
            </div>
            <div class="info-avisos">
                <p></p>
                <p>{{observaciones}}</p>
            </div>
        </div>
        {{/each}}

    </div>

    <div class="archivos-upload archivos border">
        <div class="archivos-nav">
            <h3 class="blue">Contract files</h3>
            {{#if showeditButons}}<button id="upload-btn" class="btn btn-blue">upload files</button>{{/if}}
        </div>
   
        <div class="contracts-cards-items">
            {{#each uploadedFiles}}
            <div class="document-card">
                    <p>{{fileName}}</p>
                    <div class="icons-files">
                        <a href="{{filePath}}"><img id="download-btn" src="/images/icons/download.png" alt="download"></a>
                        {{#if ../showeditButons}}<a href="/deleteFiles/{{../pq}}/{{fileName}}"><img id="delete-btn" src="/images/icons/delete-Icon.png" alt="delete"></a>{{/if}}
                    </div>
            </div>
            {{/each}}
        </div>
        
    </div>

